name: run

on:
  schedule:
    - cron: '*/15 * * * *'  ## Every 48 hours (approx every 2 days)
  workflow_dispatch:

jobs:
  update-playlist:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout this repository
      uses: actions/checkout@v3

    - name: Install Python dependencies
      run: pip install requests

    - name: Create folder
      run: mkdir folder

    - name: Unzip secze.zip
      env:
        FILE_API: ${{ secrets.SEZEZP }}
      run: unzip -o -P "$FILE_API" secze.zip -d folder

    - name: Run Python script
      run: python3 folder/acconec2.py

    - name: Clone target Repo
      run: |
        git clone https://x-access-token:${{ secrets.TARGET_TOKENCHS2 }}@${{ secrets.TARGET_URLTSCHD2 }} ${{ secrets.TARGET_NAMETSCHD2 }}

    - name: Copy JSON files
      run: cp *.json ${{ secrets.TARGET_NAMETSCHD2 }}/

    - name: Cleanup
      if: always()
      run: rm -rf folder

    - name: Commit & push to target repository
      run: |
        cd ${{ secrets.TARGET_NAMETSCHD2 }}
        git config user.name "${{ secrets.TARGET_REPO_USER }}"
        git config user.email "${{ secrets.TARGET_REPO_USER }}@users.noreply.github.com"
        git add *.json
        git commit -m "Auto update playlist on $(date '+%Y-%m-%d %H:%M:%S')" || echo "No changes to commit"
        git push
